<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Line?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.DayReview"
            prefHeight="400.0" prefWidth="700.0">
    <children>
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" layoutX="94.0" layoutY="101.0" AnchorPane.bottomAnchor="850.0" AnchorPane.leftAnchor="95.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="75.0">
            <children>
                <Label fx:id="datetime" alignment="TOP_CENTER" layoutX="94.0" layoutY="101.0" prefHeight="70.0" prefWidth="563.0" text="Tagesvorschau">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <Line endX="700.0" startX="-20.0"  />
        <HBox spacing="40." alignment="CENTER">
            <children>
                <Label text="Tag:">
                    <font>
                        <Font size="18"/>
                    </font>
                </Label>
                <TextField fx:id="dayinput" promptText="dd.MM.yyyy oder dd.MM.yy"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
        <children>
        <VBox spacing="5.0">
            <children>
                <Label fx:id="Time" text="Zeitraum">
                    <font>
                        <Font size="24" />
                    </font></Label>
                <Label fx:id="time" alignment="TOP_LEFT" prefHeight="396.0" prefWidth="250.0" text="Time">
                    <font>
                        <Font size="18.0" />
                    </font></Label>
            </children>
        </VBox>
        <VBox>
            <children>
                <Label fx:id="Information" text="Termin">
                    <font>
                        <Font size="24" />
                    </font></Label>
                <Line />
                <Label fx:id="information" alignment="TOP_LEFT" prefHeight="396.0" prefWidth="250.0" text="DayInfo">
                    <font>
                        <Font size="18.0" />
                    </font></Label>
            </children>
        </VBox>
        </children>
        </HBox>
        <HBox spacing="40.0" alignment="CENTER">
            <children>
                <Button  mnemonicParsing="false" onAction="#back" text="Zurück" />
                <Button  mnemonicParsing="false" onAction="#select" text="Auswählen" />
            </children>
        </HBox>
    </VBox>
    </children>
</AnchorPane>
